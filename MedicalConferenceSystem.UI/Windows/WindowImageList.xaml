<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MedicalConferenceSystem.UI"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="MedicalConferenceSystem.UI.WindowImageList"
        x:Name="Window"
        Title="WindowImageList"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        ResizeMode="NoResize"
        Background="{x:Null}"
        WindowStyle="None"
        Width="600"
        Height="800">    
    <Window.RenderTransform>
        <TranslateTransform x:Name="STMainWindow" />
    </Window.RenderTransform>
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid x:Name="GridTop">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="43.776" />
                <ColumnDefinition />
                <ColumnDefinition Width="72" />
            </Grid.ColumnDefinitions>
            <Border BorderThickness="0"
                    Background="#FF494949"
                    Opacity="0.8"
                    Grid.ColumnSpan="3" />
            <Image Margin="4.5,1.5,7.5,-3.5"
                   Source="/MedicalConferenceSystem.UI;component/Images/video.png"
                   Stretch="Fill"
                   Height="32"
                   d:LayoutOverrides="VerticalAlignment" />
            <StackPanel Orientation="Horizontal"
                        Grid.Column="2"
                        Margin="0"
                        d:LayoutOverrides="Width">
                <Button Content="Button"
                        Width="35"
                        Click="Button_Click"
                        Style="{DynamicResource ButtonStylePlay}" />
                <Button Content="Button"
                        Width="35"
                        Style="{DynamicResource ButtonStyleSquares}" />
            </StackPanel>
            <TextBlock HorizontalAlignment="Left"
                       Margin="4,8,0,6"
                       TextWrapping="Wrap"
                       Text="1970-1-1"
                       Width="80"
                       Grid.Column="1"
                       Foreground="{DynamicResource BrushImageBorder}" />
        </Grid>
        <Border x:Name="BorderCenter"
                BorderBrush="Black"
                BorderThickness="0"
                Margin="0"
                Grid.Row="1">
        	<Canvas x:Name="CanvasMain"
                    TouchDown="ScrollViewerCenter_TouchDown"
                    TouchUp="ScrollViewerCenter_TouchUp" />
        </Border>
        <Grid x:Name="GridBottom"
              Grid.Row="2">
            <Border BorderThickness="0"
                    Background="{DynamicResource BrushWin8}"
                    Opacity="0.8" />
            <TextBlock HorizontalAlignment="Right"
                       Margin="0,0,2.75,0"
                       Grid.Row="2"
                       TextWrapping="Wrap"
                       Text="23:25"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Foreground="{DynamicResource BrushImageBorder}" />
            <StackPanel Orientation="Horizontal"
                        d:LayoutOverrides="Width">
                <Button Content="Button"
                        Width="40"
                        Style="{DynamicResource ButtonStyleReturn}"
                        TouchUp="Button_TouchUp" />
                <Button Content="Button"
                        Width="40"
                        Style="{DynamicResource ButtonStylePage}" />
                <Button Content="Button"
                        Width="40"
                        Style="{DynamicResource ButtonStyleCopy}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>